{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "declaration": false,
        "sourceMap": false,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "~pword*": [
                "./*"
            ]
        },
        "plugins": [{
            "name": "tslint-language-service"
        }]
    }
}
